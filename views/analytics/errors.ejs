<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.prod.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4"></script>
  </head>
  <body class="min-h-screen bg-base-200">
    <%- include('../partials/navbar') %>
    <%- include('../partials/breadcrumbs') %>

    <% const base = projectBasePath || `/projects/${project._id}`; %>

    <div id="app">
    <main class="container mx-auto p-4 space-y-6">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div class="flex items-center gap-3">
          <div class="text-3xl"><span>{{ project.icon || 'ðŸ“Š' }}</span></div>
          <div>
            <h1 class="text-2xl font-bold">Errors</h1>
            <p class="text-sm text-base-content/70">
              Environment: <span class="capitalize">{{ project.environment }}</span>
              â€¢ Role: <span class="capitalize">{{ currentProjectRole }}</span>
            </p>
          </div>
        </div>
        <%- include('../partials/analytics-subnav', { project, projectBasePath, currentSection }) %>
      </div>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Filters</h2>

          <form class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end" @submit.prevent="applyFilters">
            <div class="form-control">
              <label class="label" for="timeframe">
                <span class="label-text">Timeframe</span>
              </label>
              <select id="timeframe" v-model="timeframe" class="select select-bordered w-full">
                <option value="5m">Last 5 min</option>
                <option value="30m">Last 30 min</option>
                <option value="1h">Last 1 hour</option>
                <option value="6h">Last 6 hours</option>
                <option value="12h">Last 12 hours</option>
                <option value="24h">Last 24 hours</option>
                <option value="7d">Last 7 days</option>
                <option value="30d">Last 30 days</option>
                <option value="3m">Last 3 months</option>
                <option value="1y">Current year</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label" for="browser">
                <span class="label-text">Browser</span>
              </label>
              <select id="browser" v-model="browser" class="select select-bordered w-full">
                <option value="all">All</option>
                <option value="Chrome">Chrome</option>
                <option value="Firefox">Firefox</option>
                <option value="Safari">Safari</option>
                <option value="Edge">Edge</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label" for="errorType">
                <span class="label-text">Error type</span>
              </label>
              <select id="errorType" v-model="errorType" class="select select-bordered w-full">
                <option value="all">All</option>
                <option value="window_error">Window error</option>
                <option value="unhandled_rejection">Unhandled rejection</option>
              </select>
            </div>

            <div class="form-control md:col-span-1">
              <button type="submit" class="btn btn-primary w-full">Apply</button>
            </div>
          </form>
        </div>
      </section>

      <section class="grid gap-4 md:grid-cols-3">
        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Total errors</div>
            <div class="stat-value text-primary"><%= totalErrors %></div>
            <div class="stat-desc">In selected timeframe</div>
          </div>
        </div>

        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Unique error groups</div>
            <div class="stat-value"><%= uniqueFingerprints %></div>
            <div class="stat-desc">Distinct fingerprints</div>
          </div>
        </div>

        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Avg errors / day</div>
            <div class="stat-value">{{ avgErrorsPerDay }}</div>
            <div class="stat-desc">Total / days</div>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <div class="flex items-center justify-between">
            <h2 class="card-title text-xl">Errors over time</h2>
            <div class="text-sm text-base-content/60">{{ timeframeLabel }}</div>
          </div>

          <div v-if="!errorsByDay.length" class="py-10 text-center text-base-content/70">
            No errors yet.
          </div>
          <div v-else class="w-full">
            <canvas id="errorsChart" height="90"></canvas>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Top error groups</h2>

          <div v-if="!groupedErrors.length" class="py-6 text-center text-base-content/70">
            No errors to show.
          </div>

          <div v-else class="overflow-x-auto">
            <table class="table table-zebra w-full text-sm">
              <thead>
                <tr>
                  <th>Error message</th>
                  <th>Browser</th>
                  <th>OS</th>
                  <th>Device</th>
                  <th>First seen</th>
                  <th class="text-right">Occurrences</th>
                  <th class="text-right">Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="row in groupedErrors" :key="row.fingerprint">
                  <td class="max-w-[520px]">
                    <div class="truncate" :title="row.message">{{ row.message }}</div>
                    <div class="text-xs text-base-content/60 mt-1">
                      <span class="font-mono" :title="row.fingerprint">{{ row.fingerprint.slice(0, 8) }}</span>
                    </div>
                  </td>
                  <td>
                    <span v-if="row.browser" class="badge badge-outline">{{ row.browser }}</span>
                    <span v-else class="text-base-content/60">â€”</span>
                  </td>
                  <td>
                    <span v-if="row.os" class="badge badge-outline">{{ row.os }}</span>
                    <span v-else class="text-base-content/60">â€”</span>
                    <span v-if="row.osVersion" class="ml-2 text-base-content/70">{{ row.osVersion }}</span>
                  </td>
                  <td>
                    <span v-if="row.deviceType" class="badge badge-outline">{{ row.deviceType }}</span>
                    <span v-else class="text-base-content/60">â€”</span>
                  </td>
                  <td>{{ formatTimestamp(row.firstSeen) }}</td>
                  <td class="text-right">{{ row.count }}</td>
                  <td class="text-right">
                    <a
                      class="btn btn-ghost btn-xs"
                      :href="`/projects/${project._id}/errors/${row.fingerprint}?timeframe=${encodeURIComponent(timeframe)}`"
                    >
                      View details
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </main>

    <script>
      const { createApp: createErrorsApp, computed: errorsComputed, nextTick, onBeforeUnmount, onMounted, ref: errorsRef, watch } = Vue;

      createErrorsApp({
        setup() {
          const project = errorsRef(<%- JSON.stringify(project) %>);
          const currentProjectRole = '<%= currentProjectRole %>';

          const basePath = <%- JSON.stringify(projectBasePath || `/projects/${project._id}`) %>;
          const base = basePath;

          const timeframe = errorsRef('<%= timeframe %>');
          const browser = errorsRef('<%= browser %>');
          const errorType = errorsRef('<%= errorType %>');

          const errorsByDay = errorsRef(<%- JSON.stringify(errorsByDay || []) %>);
          const groupedErrors = errorsRef(<%- JSON.stringify(groupedErrors || []) %>);

          let chartInstance = null;

          const timeframeLabel = errorsComputed(() => {
            if (timeframe.value === '5m') return 'Last 5 min';
            if (timeframe.value === '30m') return 'Last 30 min';
            if (timeframe.value === '1h') return 'Last 1 hour';
            if (timeframe.value === '6h') return 'Last 6 hours';
            if (timeframe.value === '12h') return 'Last 12 hours';
            if (timeframe.value === '24h') return 'Last 24 hours';
            if (timeframe.value === '7d') return 'Last 7 days';
            if (timeframe.value === '30d') return 'Last 30 days';
            if (timeframe.value === '3m') return 'Last 3 months';
            if (timeframe.value === '1y') return 'Current year';
            return 'Last 7 days';
          });

          const days = errorsComputed(() => {
            if (timeframe.value === '5m') return 5 / (24 * 60);
            if (timeframe.value === '30m') return 30 / (24 * 60);
            if (timeframe.value === '1h') return 1 / 24;
            if (timeframe.value === '6h') return 6 / 24;
            if (timeframe.value === '12h') return 12 / 24;
            if (timeframe.value === '24h') return 1;
            if (timeframe.value === '7d') return 7;
            if (timeframe.value === '30d') return 30;
            if (timeframe.value === '3m') return 90;
            if (timeframe.value === '1y') return 365;
            return 7;
          });

          const avgErrorsPerDay = errorsComputed(() => {
            const total = Number(<%= totalErrors %>) || 0;
            const d = days.value || 1;
            return (total / d).toFixed(2);
          });

          function applyFilters() {
            const params = new URLSearchParams();
            if (timeframe.value) params.set('timeframe', timeframe.value);
            if (browser.value && browser.value !== 'all') {
              params.set('browser', browser.value);
            }
            if (errorType.value && errorType.value !== 'all') {
              params.set('errorType', errorType.value);
            }

            const base = `${basePath}/errors`;
            const query = params.toString();
            window.location.href = query ? `${base}?${query}` : base;
          }

          function formatTimestamp(date) {
            if (!date) return '';
            const d = new Date(date);
            if (Number.isNaN(d.getTime())) return '';
            return d.toLocaleString();
          }

          function renderChart() {
            if (!errorsByDay.value.length) return;

            const el = document.getElementById('errorsChart');
            if (!el) return;

            const labels = errorsByDay.value.map((p) => p.date);
            const data = errorsByDay.value.map((p) => p.count);

            const ctx = el.getContext('2d');

            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }

            chartInstance = new Chart(ctx, {
              type: 'line',
              data: {
                labels,
                datasets: [
                  {
                    label: 'Errors',
                    data,
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.15)',
                    fill: true,
                    tension: 0.25,
                    pointRadius: 3,
                  },
                ],
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  legend: { display: false },
                  tooltip: { enabled: true },
                },
                scales: {
                  x: {
                    ticks: { maxRotation: 0 },
                    grid: { display: false },
                  },
                  y: {
                    beginAtZero: true,
                    ticks: { precision: 0 },
                  },
                },
              },
            });
          }

          onMounted(() => {
            renderChart();
          });

          onBeforeUnmount(() => {
            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }
          });

          return {
            project,
            currentProjectRole,
            base,
            timeframe,
            browser,
            errorType,
            errorsByDay,
            groupedErrors,
            timeframeLabel,
            avgErrorsPerDay,
            applyFilters,
            formatTimestamp,
          };
        },
      }).mount('#app');
    </script>
    </div>
  </body>
</html>
