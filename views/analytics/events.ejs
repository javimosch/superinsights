<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.prod.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4"></script>
  </head>
  <body class="min-h-screen bg-base-200">
    <%- include('../partials/navbar') %>
    <%- include('../partials/breadcrumbs') %>

    <% const base = projectBasePath || `/projects/${project._id}`; %>

    <div id="app">
    <main class="container mx-auto p-4 space-y-6">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div class="flex items-center gap-3">
          <div class="text-3xl"><span>{{ project.icon || 'ðŸ“Š' }}</span></div>
          <div>
            <h1 class="text-2xl font-bold">Events</h1>
            <p class="text-sm text-base-content/70">
              Environment: <span class="capitalize">{{ project.environment }}</span>
              â€¢ Role: <span class="capitalize">{{ currentProjectRole }}</span>
            </p>
          </div>
        </div>
        <%- include('../partials/analytics-subnav', { project, projectBasePath, currentSection }) %>
      </div>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Filters</h2>

          <form class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end" @submit.prevent="applyFilters">
            <div class="form-control">
              <label class="label" for="timeframe">
                <span class="label-text">Timeframe</span>
              </label>
              <select id="timeframe" v-model="timeframe" class="select select-bordered w-full">
                <option value="5m">Last 5 min</option>
                <option value="30m">Last 30 min</option>
                <option value="1h">Last 1 hour</option>
                <option value="6h">Last 6 hours</option>
                <option value="12h">Last 12 hours</option>
                <option value="24h">Last 24 hours</option>
                <option value="7d">Last 7 days</option>
                <option value="30d">Last 30 days</option>
                <option value="3m">Last 3 months</option>
                <option value="1y">Current year</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label" for="eventName">
                <span class="label-text">Event name</span>
              </label>
              <select id="eventName" v-model="eventName" class="select select-bordered w-full">
                <option value="">All events</option>
                <option v-for="name in uniqueEventNames" :key="name" :value="name">
                  {{ name }}
                </option>
              </select>
            </div>

            <div class="form-control md:col-span-4">
              <label class="label">
                <span class="label-text">Metadata filters</span>
              </label>
              <div class="space-y-2">
                <div
                  v-for="(row, idx) in metaPairs"
                  :key="idx"
                  class="grid grid-cols-1 md:grid-cols-12 gap-2 items-end"
                >
                  <div class="form-control md:col-span-5">
                    <label class="label" :for="`metaKey-${idx}`">
                      <span class="label-text">Key</span>
                    </label>
                    <input
                      class="input input-bordered w-full"
                      :id="`metaKey-${idx}`"
                      v-model="row.key"
                      placeholder="e.g. module"
                    />
                  </div>
                  <div class="form-control md:col-span-5">
                    <label class="label" :for="`metaValue-${idx}`">
                      <span class="label-text">Value</span>
                    </label>
                    <input
                      class="input input-bordered w-full"
                      :id="`metaValue-${idx}`"
                      v-model="row.value"
                      placeholder="e.g. foo"
                    />
                  </div>
                  <div class="md:col-span-2 flex gap-2">
                    <button type="button" class="btn btn-outline w-full" @click="removeMetaPair(idx)">
                      Remove
                    </button>
                  </div>
                </div>

                <button type="button" class="btn btn-outline" @click="addMetaPair">Add metadata filter</button>
              </div>
            </div>

            <div class="form-control md:col-span-4">
              <button type="submit" class="btn btn-primary w-full">Apply</button>
            </div>
          </form>
        </div>
      </section>

      <section class="grid gap-4 md:grid-cols-3">
        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Total events</div>
            <div class="stat-value text-primary"><%= totalEvents %></div>
            <div class="stat-desc">In selected timeframe</div>
          </div>
        </div>

        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Unique event types</div>
            <div class="stat-value"><%= uniqueEventNames.length %></div>
            <div class="stat-desc">Distinct names</div>
          </div>
        </div>

        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Avg events / day</div>
            <div class="stat-value">{{ avgEventsPerDay }}</div>
            <div class="stat-desc">Total / days</div>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <div class="flex items-center justify-between">
            <h2 class="card-title text-xl">Events over time</h2>
            <div class="text-sm text-base-content/60">{{ timeframeLabel }}</div>
          </div>

          <div v-if="!eventsByDay.length" class="py-10 text-center text-base-content/70">
            No events yet.
          </div>
          <div v-else class="w-full">
            <canvas id="eventsChart" height="90"></canvas>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Top events</h2>

          <div v-if="!topEvents.length" class="py-6 text-center text-base-content/70">
            No events to show.
          </div>

          <div v-else class="overflow-x-auto">
            <table class="table table-zebra w-full text-sm">
              <thead>
                <tr>
                  <th>Event name</th>
                  <th class="text-right">Count</th>
                  <th class="text-right">Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="row in topEvents" :key="row.eventName">
                  <td class="max-w-[520px]">
                    <div class="truncate" :title="row.eventName">{{ row.eventName }}</div>
                  </td>
                  <td class="text-right">{{ row.count }}</td>
                  <td class="text-right">
                    <a
                      class="btn btn-ghost btn-xs"
                      :href="`/projects/${project._id}/events/${encodeURIComponent(row.eventName)}`"
                    >
                      View details
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Slowest timed events</h2>

          <div v-if="!timedEvents.length" class="py-6 text-center text-base-content/70">
            No timed events yet.
          </div>

          <div v-else class="overflow-x-auto">
            <table class="table table-zebra w-full text-sm">
              <thead>
                <tr>
                  <th>Event name</th>
                  <th class="text-right">Count</th>
                  <th class="text-right">Avg (ms)</th>
                  <th class="text-right">P50 (ms)</th>
                  <th class="text-right">P95 (ms)</th>
                  <th class="text-right">Max (ms)</th>
                  <th class="text-right">Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="row in timedEvents" :key="row.eventName">
                  <td class="max-w-[520px]">
                    <div class="truncate" :title="row.eventName">{{ row.eventName }}</div>
                  </td>
                  <td class="text-right">{{ row.count || 0 }}</td>
                  <td class="text-right">{{ formatMs(row.avgMs) }}</td>
                  <td class="text-right">{{ formatMs(row.p50Ms) }}</td>
                  <td class="text-right">{{ formatMs(row.p95Ms) }}</td>
                  <td class="text-right">{{ formatMs(row.maxMs) }}</td>
                  <td class="text-right">
                    <a
                      class="btn btn-ghost btn-xs"
                      :href="`/projects/${project._id}/events/${encodeURIComponent(row.eventName)}`"
                    >
                      View details
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </main>

    <script>
      const { createApp: createEventsApp, computed: eventsComputed, nextTick, onBeforeUnmount, onMounted, ref: eventsRef, watch } = Vue;

      createEventsApp({
        setup() {
          const project = eventsRef(<%- JSON.stringify(project) %>);
          const currentProjectRole = '<%= currentProjectRole %>';

          const basePath = <%- JSON.stringify(projectBasePath || `/projects/${project._id}`) %>;
          const base = basePath;

          const timeframe = eventsRef('<%= timeframe %>');
          const eventName = eventsRef('<%= eventName ? eventName : "" %>');

          const segment = eventsRef(<%- JSON.stringify(segment || {}) %>);
          const metaPairs = eventsRef(
            segment.value && segment.value.meta && typeof segment.value.meta === 'object'
              ? Object.entries(segment.value.meta).map(([k, v]) => ({ key: String(k), value: String(v) }))
              : []
          );

          const eventsByDay = eventsRef(<%- JSON.stringify(eventsByDay || []) %>);
          const topEvents = eventsRef(<%- JSON.stringify(topEvents || []) %>);
          const uniqueEventNames = eventsRef(<%- JSON.stringify(uniqueEventNames || []) %>);
          const timedEvents = eventsRef(<%- JSON.stringify(timedEvents || []) %>);

          let chartInstance = null;

          const timeframeLabel = eventsComputed(() => {
            if (timeframe.value === '5m') return 'Last 5 min';
            if (timeframe.value === '30m') return 'Last 30 min';
            if (timeframe.value === '1h') return 'Last 1 hour';
            if (timeframe.value === '6h') return 'Last 6 hours';
            if (timeframe.value === '12h') return 'Last 12 hours';
            if (timeframe.value === '24h') return 'Last 24 hours';
            if (timeframe.value === '7d') return 'Last 7 days';
            if (timeframe.value === '30d') return 'Last 30 days';
            if (timeframe.value === '3m') return 'Last 3 months';
            if (timeframe.value === '1y') return 'Current year';
            return 'Last 7 days';
          });

          const days = eventsComputed(() => {
            if (timeframe.value === '5m') return 5 / (24 * 60);
            if (timeframe.value === '30m') return 30 / (24 * 60);
            if (timeframe.value === '1h') return 1 / 24;
            if (timeframe.value === '6h') return 6 / 24;
            if (timeframe.value === '12h') return 12 / 24;
            if (timeframe.value === '24h') return 1;
            if (timeframe.value === '7d') return 7;
            if (timeframe.value === '30d') return 30;
            if (timeframe.value === '3m') return 90;
            if (timeframe.value === '1y') return 365;
            return 7;
          });

          const avgEventsPerDay = eventsComputed(() => {
            const total = Number(<%= totalEvents %>) || 0;
            const d = days.value || 1;
            return (total / d).toFixed(2);
          });

          function applyFilters() {
            const params = new URLSearchParams();
            if (timeframe.value) params.set('timeframe', timeframe.value);
            if (eventName.value && eventName.value.trim()) {
              params.set('eventName', eventName.value.trim());
            }

            const meta = {};
            for (const row of metaPairs.value || []) {
              const k = row && row.key ? String(row.key).trim() : '';
              const v = row && row.value ? String(row.value).trim() : '';
              if (!k || !v) continue;
              meta[k] = v;
            }
            if (Object.keys(meta).length) {
              params.set('meta', JSON.stringify(meta));
            }

            const base = `${basePath}/events`;
            const query = params.toString();
            window.location.href = query ? `${base}?${query}` : base;
          }

          function addMetaPair() {
            metaPairs.value.push({ key: '', value: '' });
          }

          function removeMetaPair(idx) {
            if (!Array.isArray(metaPairs.value)) return;
            metaPairs.value.splice(idx, 1);
          }

          function renderChart() {
            if (!eventsByDay.value.length) return;

            const el = document.getElementById('eventsChart');
            if (!el) return;

            const labels = eventsByDay.value.map((p) => p.date);
            const data = eventsByDay.value.map((p) => p.count);

            const ctx = el.getContext('2d');

            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }

            chartInstance = new Chart(ctx, {
              type: 'line',
              data: {
                labels,
                datasets: [
                  {
                    label: 'Events',
                    data,
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.15)',
                    fill: true,
                    tension: 0.25,
                    pointRadius: 3,
                  },
                ],
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  legend: { display: false },
                  tooltip: { enabled: true },
                },
                scales: {
                  x: {
                    ticks: { maxRotation: 0 },
                    grid: { display: false },
                  },
                  y: {
                    beginAtZero: true,
                    ticks: { precision: 0 },
                  },
                },
              },
            });
          }

          onMounted(() => {
            renderChart();
          });

          function formatMs(value) {
            if (value === null || value === undefined) return 'â€”';
            const n = Number(value);
            if (!Number.isFinite(n)) return 'â€”';
            return String(Math.round(n));
          }

          onBeforeUnmount(() => {
            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }
          });

          return {
            project,
            currentProjectRole,
            base,
            timeframe,
            eventName,
            metaPairs,
            eventsByDay,
            topEvents,
            timedEvents,
            uniqueEventNames,
            timeframeLabel,
            avgEventsPerDay,
            applyFilters,
            addMetaPair,
            removeMetaPair,
            formatMs,
          };
        },
      }).mount('#app');
    </script>
    </div>
  </body>
</html>
