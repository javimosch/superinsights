<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.prod.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4"></script>
  </head>
  <body class="min-h-screen bg-base-200">
    <%- include('../partials/navbar') %>
    <%- include('../partials/breadcrumbs') %>

    <% const base = projectBasePath || `/projects/${project._id}`; %>

    <div id="app">
    <main class="container mx-auto p-4 space-y-6">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div class="flex items-center gap-3">
          <div class="text-3xl"><span>{{ project.icon || 'ðŸ“Š' }}</span></div>
          <div>
            <h1 class="text-2xl font-bold">Page views</h1>
            <p class="text-sm text-base-content/70">
              Environment: <span class="capitalize">{{ project.environment }}</span>
              â€¢ Role: <span class="capitalize">{{ currentProjectRole }}</span>
            </p>
          </div>
        </div>
        <%- include('../partials/analytics-subnav', { project, projectBasePath, currentSection }) %>
      </div>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Filters</h2>

          <form class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end" @submit.prevent="applyFilters">
            <div class="form-control">
              <label class="label" for="timeframe">
                <span class="label-text">Timeframe</span>
              </label>
              <select id="timeframe" v-model="timeframe" class="select select-bordered w-full">
                <option value="5m">Last 5 min</option>
                <option value="30m">Last 30 min</option>
                <option value="1h">Last 1 hour</option>
                <option value="6h">Last 6 hours</option>
                <option value="12h">Last 12 hours</option>
                <option value="24h">Last 24 hours</option>
                <option value="7d">Last 7 days</option>
                <option value="30d">Last 30 days</option>
                <option value="3m">Last 3 months</option>
                <option value="1y">Current year</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label" for="deviceType">
                <span class="label-text">Device</span>
              </label>
              <select id="deviceType" v-model="deviceType" class="select select-bordered w-full">
                <option value="all">All</option>
                <option value="desktop">Desktop</option>
                <option value="mobile">Mobile</option>
                <option value="tablet">Tablet</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label" for="urlPrefix">
                <span class="label-text">URL prefix</span>
              </label>
              <input
                id="urlPrefix"
                v-model="urlPrefix"
                type="text"
                placeholder="/blog"
                class="input input-bordered w-full"
              />
            </div>

            <div class="form-control">
              <button type="submit" class="btn btn-primary w-full">Apply</button>
            </div>
          </form>
        </div>
      </section>

      <section class="grid gap-4 md:grid-cols-3">
        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Total page views</div>
            <div class="stat-value text-primary"><%= totalViews %></div>
            <div class="stat-desc">In selected timeframe</div>
          </div>
        </div>

        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Unique visitors</div>
            <div class="stat-value"><%= uniqueVisitors %></div>
            <div class="stat-desc">Distinct client IDs</div>
          </div>
        </div>

        <div class="stats shadow bg-base-100">
          <div class="stat">
            <div class="stat-title">Avg views / visitor</div>
            <div class="stat-value">
              <%= uniqueVisitors ? (totalViews / uniqueVisitors).toFixed(2) : '0.00' %>
            </div>
            <div class="stat-desc">Total / unique</div>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <div class="flex items-center justify-between">
            <h2 class="card-title text-xl">Views over time</h2>
            <div class="text-sm text-base-content/60">
              {{ timeframeLabel }}
            </div>
          </div>

          <div v-if="!viewsByDay.length" class="py-10 text-center text-base-content/70">
            No page views yet.
          </div>
          <div v-else class="w-full">
            <canvas id="viewsChart" height="90"></canvas>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Top pages</h2>

          <div v-if="!topPages.length" class="py-6 text-center text-base-content/70">
            No pages to show.
          </div>

          <div v-else class="overflow-x-auto">
            <table class="table table-zebra w-full text-sm">
              <thead>
                <tr>
                  <th>URL</th>
                  <th class="text-right">Views</th>
                  <th class="text-right">Unique visitors</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="row in topPages" :key="row.url">
                  <td class="max-w-[520px]">
                    <div class="truncate" :title="row.url">{{ row.url }}</div>
                  </td>
                  <td class="text-right">{{ row.views }}</td>
                  <td class="text-right">{{ row.uniqueVisitors }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </main>

    <script>
      const { createApp: createPageviewsApp, computed: pageviewsComputed, nextTick, onBeforeUnmount, onMounted, ref: pageviewsRef, watch } = Vue;

      createPageviewsApp({
        setup() {
          const project = pageviewsRef(<%- JSON.stringify(project) %>);
          const currentProjectRole = '<%= currentProjectRole %>';

          const basePath = <%- JSON.stringify(projectBasePath || `/projects/${project._id}`) %>;
          const base = basePath;

          const timeframe = pageviewsRef('<%= timeframe %>');
          const deviceType = pageviewsRef('<%= deviceType %>');
          const urlPrefix = pageviewsRef('<%= urlPrefix ? urlPrefix : "" %>');

          const viewsByDay = pageviewsRef(<%- JSON.stringify(viewsByDay || []) %>);
          const topPages = pageviewsRef(<%- JSON.stringify(topPages || []) %>);

          let chartInstance = null;

          const timeframeLabel = pageviewsComputed(() => {
            if (timeframe.value === '5m') return 'Last 5 min';
            if (timeframe.value === '30m') return 'Last 30 min';
            if (timeframe.value === '1h') return 'Last 1 hour';
            if (timeframe.value === '6h') return 'Last 6 hours';
            if (timeframe.value === '12h') return 'Last 12 hours';
            if (timeframe.value === '24h') return 'Last 24 hours';
            if (timeframe.value === '7d') return 'Last 7 days';
            if (timeframe.value === '30d') return 'Last 30 days';
            if (timeframe.value === '3m') return 'Last 3 months';
            if (timeframe.value === '1y') return 'Current year';
            return 'Last 7 days';
          });

          function applyFilters() {
            const params = new URLSearchParams();
            if (timeframe.value) params.set('timeframe', timeframe.value);
            if (deviceType.value && deviceType.value !== 'all') {
              params.set('deviceType', deviceType.value);
            }
            if (urlPrefix.value && urlPrefix.value.trim()) {
              params.set('urlPrefix', urlPrefix.value.trim());
            }

            const base = `${basePath}/pageviews`;
            const query = params.toString();
            window.location.href = query ? `${base}?${query}` : base;
          }

          function renderChart() {
            if (!viewsByDay.value.length) return;

            const el = document.getElementById('viewsChart');
            if (!el) return;

            const labels = viewsByDay.value.map((p) => p.date);
            const data = viewsByDay.value.map((p) => p.count);

            const ctx = el.getContext('2d');

            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }

            chartInstance = new Chart(ctx, {
              type: 'line',
              data: {
                labels,
                datasets: [
                  {
                    label: 'Page views',
                    data,
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.15)',
                    fill: true,
                    tension: 0.25,
                    pointRadius: 3,
                  },
                ],
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  legend: { display: false },
                  tooltip: { enabled: true },
                },
                scales: {
                  x: {
                    ticks: { maxRotation: 0 },
                    grid: { display: false },
                  },
                  y: {
                    beginAtZero: true,
                    ticks: { precision: 0 },
                  },
                },
              },
            });
          }

          onMounted(() => {
            renderChart();
          });

          onBeforeUnmount(() => {
            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }
          });

          return {
            project,
            currentProjectRole,
            base,
            timeframe,
            deviceType,
            urlPrefix,
            viewsByDay,
            topPages,
            timeframeLabel,
            applyFilters,
          };
        },
      }).mount('#app');
    </script>
    </div>
  </body>
</html>
