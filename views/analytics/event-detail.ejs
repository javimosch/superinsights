<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4"></script>
  </head>
  <body class="min-h-screen bg-base-200">
    <div class="navbar bg-base-100 shadow">
      <div class="flex-1 px-4 flex items-center gap-4">
        <a href="/" class="text-xl font-bold">SuperInsights</a>
        <% if (currentUser) { %>
        <a href="/projects" class="btn btn-ghost btn-sm">Projects</a>
        <% if (currentUser.role === 'admin') { %>
        <a href="/admin/users" class="btn btn-ghost btn-sm">Users</a>
        <% } %>
        <% } %>
      </div>
      <div class="flex-none gap-2 px-4">
        <% if (currentUser) { %>
        <span class="text-sm mr-2">
          Signed in as <span class="font-semibold"><%= currentUser.email %></span>
          (<%= currentUser.role %>)
        </span>
        <form action="/auth/logout" method="POST">
          <button type="submit" class="btn btn-sm">Logout</button>
        </form>
        <% } else { %>
        <a href="/auth/login" class="btn btn-ghost btn-sm">Login</a>
        <a href="/auth/register" class="btn btn-primary btn-sm">Register</a>
        <% } %>
      </div>
    </div>

    <main id="app" class="container mx-auto p-4 space-y-6">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div class="flex items-center gap-3">
          <div class="text-3xl"><span>{{ project.icon || 'ðŸ“Š' }}</span></div>
          <div>
            <div class="breadcrumbs text-sm">
              <ul>
                <li><a href="/projects">Projects</a></li>
                <li>
                  <a :href="`/projects/${project._id}/settings`">{{ project.name }}</a>
                </li>
                <li>
                  <a :href="`/projects/${project._id}/events`">Events</a>
                </li>
                <li>{{ eventName }}</li>
              </ul>
            </div>
            <h1 class="text-2xl font-bold">{{ eventName }}</h1>
            <p class="text-sm text-base-content/70">
              Environment: <span class="capitalize">{{ project.environment }}</span>
              â€¢ Role: <span class="capitalize">{{ currentProjectRole }}</span>
            </p>
          </div>
        </div>
        <div class="flex gap-2">
          <a :href="`/projects/${project._id}/events`" class="btn btn-ghost">
            Back to events
          </a>
          <a :href="`/projects/${project._id}/pageviews`" class="btn btn-ghost">View Page views</a>
          <a :href="`/projects/${project._id}/events`" class="btn btn-ghost">View Events</a>
          <a :href="`/projects/${project._id}/errors`" class="btn btn-ghost">View Errors</a>
          <a :href="`/projects/${project._id}/performance`" class="btn btn-ghost">
            View Performance
          </a>
          <a :href="`/projects/${project._id}/settings`" class="btn btn-ghost">Back to settings</a>
        </div>
      </div>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Timeframe</h2>
          <form class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end" @submit.prevent="applyFilters">
            <div class="form-control">
              <label class="label" for="timeframe">
                <span class="label-text">Timeframe</span>
              </label>
              <select id="timeframe" v-model="timeframe" class="select select-bordered w-full">
                <option value="24h">Last 24 hours</option>
                <option value="7d">Last 7 days</option>
                <option value="30d">Last 30 days</option>
              </select>
            </div>
            <div class="form-control md:col-span-3">
              <button type="submit" class="btn btn-primary w-full">Apply</button>
            </div>
          </form>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <div class="flex items-center justify-between">
            <h2 class="card-title text-xl">Event overview</h2>
            <div class="text-sm text-base-content/60">{{ timeframeLabel }}</div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="stats shadow bg-base-200">
              <div class="stat">
                <div class="stat-title">Occurrences</div>
                <div class="stat-value text-primary"><%= occurrences.length %></div>
                <div class="stat-desc">In selected timeframe</div>
              </div>
            </div>

            <div class="stats shadow bg-base-200">
              <div class="stat">
                <div class="stat-title">First seen</div>
                <div class="stat-value text-base text-base-content">
                  {{ firstSeenLabel }}
                </div>
                <div class="stat-desc">Oldest in list</div>
              </div>
            </div>

            <div class="stats shadow bg-base-200">
              <div class="stat">
                <div class="stat-title">Last seen</div>
                <div class="stat-value text-base text-base-content">
                  {{ lastSeenLabel }}
                </div>
                <div class="stat-desc">Newest in list</div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <div class="flex items-center justify-between">
            <h2 class="card-title text-xl">Occurrences over time</h2>
            <div class="text-sm text-base-content/60">{{ timeframeLabel }}</div>
          </div>

          <div v-if="!eventsByDay.length" class="py-10 text-center text-base-content/70">
            No occurrences yet.
          </div>
          <div v-else class="w-full">
            <canvas id="eventChart" height="90"></canvas>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Event properties</h2>

          <div v-if="!propertySchema.length" class="py-6 text-center text-base-content/70">
            No properties captured.
          </div>

          <div v-else class="overflow-x-auto">
            <table class="table table-zebra w-full text-sm">
              <thead>
                <tr>
                  <th>Property key</th>
                  <th>Sample values</th>
                  <th>Type</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="row in propertySchema" :key="row.key">
                  <td class="font-mono">{{ row.key }}</td>
                  <td class="max-w-[520px]">
                    <div class="truncate" :title="sampleValuesLabel(row.sampleValues)">
                      {{ sampleValuesLabel(row.sampleValues) }}
                    </div>
                  </td>
                  <td class="capitalize">{{ inferType(row.sampleValues) }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

      <section class="card bg-base-100 shadow">
        <div class="card-body space-y-4">
          <h2 class="card-title text-xl">Recent occurrences (last 100)</h2>

          <div v-if="!occurrences.length" class="py-6 text-center text-base-content/70">
            No occurrences yet.
          </div>

          <div v-else class="overflow-x-auto">
            <table class="table table-zebra w-full text-sm">
              <thead>
                <tr>
                  <th>Timestamp</th>
                  <th>Session ID</th>
                  <th>Properties</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="row in occurrences" :key="row._id">
                  <td class="whitespace-nowrap">{{ formatTimestamp(row.timestamp) }}</td>
                  <td class="font-mono max-w-[240px]">
                    <div class="truncate" :title="row.sessionId || ''">
                      {{ (row.sessionId || '').slice(0, 12) }}
                    </div>
                  </td>
                  <td class="max-w-[620px]">
                    <pre class="p-2 bg-base-200 rounded border border-base-300 text-xs overflow-x-auto"><code>{{ JSON.stringify(row.properties || {}, null, 2) }}</code></pre>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>
    </main>

    <script>
      const { createApp, computed, onBeforeUnmount, onMounted, ref } = Vue;

      createApp({
        setup() {
          const project = ref(<%- JSON.stringify(project) %>);
          const currentProjectRole = '<%= currentProjectRole %>';

          const eventName = ref(<%- JSON.stringify(eventName) %>);
          const timeframe = ref('<%= timeframe %>');

          const occurrences = ref(<%- JSON.stringify(occurrences || []) %>);
          const propertySchema = ref(<%- JSON.stringify(propertySchema || []) %>);
          const eventsByDay = ref(<%- JSON.stringify(eventsByDay || []) %>);

          let chartInstance = null;

          const timeframeLabel = computed(() => {
            if (timeframe.value === '24h') return 'Last 24 hours';
            if (timeframe.value === '30d') return 'Last 30 days';
            return 'Last 7 days';
          });

          const firstSeenLabel = computed(() => {
            if (!occurrences.value.length) return '-';
            const last = occurrences.value[occurrences.value.length - 1];
            return formatTimestamp(last.timestamp);
          });

          const lastSeenLabel = computed(() => {
            if (!occurrences.value.length) return '-';
            const first = occurrences.value[0];
            return formatTimestamp(first.timestamp);
          });

          function applyFilters() {
            const params = new URLSearchParams();
            if (timeframe.value) params.set('timeframe', timeframe.value);

            const base = `/projects/${project.value._id}/events/${encodeURIComponent(eventName.value)}`;
            const query = params.toString();
            window.location.href = query ? `${base}?${query}` : base;
          }

          function renderChart() {
            if (!eventsByDay.value.length) return;

            const el = document.getElementById('eventChart');
            if (!el) return;

            const labels = eventsByDay.value.map((p) => p.date);
            const data = eventsByDay.value.map((p) => p.count);

            const ctx = el.getContext('2d');

            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }

            chartInstance = new Chart(ctx, {
              type: 'line',
              data: {
                labels,
                datasets: [
                  {
                    label: 'Occurrences',
                    data,
                    borderColor: '#3b82f6',
                    backgroundColor: 'rgba(59, 130, 246, 0.15)',
                    fill: true,
                    tension: 0.25,
                    pointRadius: 3,
                  },
                ],
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  legend: { display: false },
                  tooltip: { enabled: true },
                },
                scales: {
                  x: {
                    ticks: { maxRotation: 0 },
                    grid: { display: false },
                  },
                  y: {
                    beginAtZero: true,
                    ticks: { precision: 0 },
                  },
                },
              },
            });
          }

          function formatTimestamp(date) {
            if (!date) return '';
            try {
              return new Date(date).toLocaleString();
            } catch (e) {
              return String(date);
            }
          }

          function inferType(sampleValues) {
            const values = Array.isArray(sampleValues) ? sampleValues : [];
            if (!values.length) return 'unknown';

            const v = values.find((x) => x !== null && x !== undefined);
            if (v === null || v === undefined) return 'unknown';
            if (Array.isArray(v)) return 'array';
            return typeof v;
          }

          function sampleValuesLabel(sampleValues) {
            const values = Array.isArray(sampleValues) ? sampleValues : [];
            return values
              .map((v) => {
                if (typeof v === 'string') return v;
                try {
                  return JSON.stringify(v);
                } catch (e) {
                  return String(v);
                }
              })
              .join(', ');
          }

          onMounted(() => {
            renderChart();
          });

          onBeforeUnmount(() => {
            if (chartInstance) {
              chartInstance.destroy();
              chartInstance = null;
            }
          });

          return {
            project,
            currentProjectRole,
            eventName,
            timeframe,
            occurrences,
            propertySchema,
            eventsByDay,
            timeframeLabel,
            firstSeenLabel,
            lastSeenLabel,
            applyFilters,
            renderChart,
            formatTimestamp,
            inferType,
            sampleValuesLabel,
          };
        },
      }).mount('#app');
    </script>
  </body>
</html>
